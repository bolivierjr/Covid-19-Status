{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": ["prettier", "airbnb-base", "plugin:jest/recommended", "plugin:jsdoc/recommended"],
  "plugins": ["prettier", "jest", "jsdoc"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "prettier/prettier": "error",
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "arrow-parens": ["error", "as-needed"]
  }
}
